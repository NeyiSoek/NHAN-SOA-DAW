<div class="container p-4">
    <h2>Purchase Orders</h2>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Product</th>
                <th>Quantity</th>
                <th>Total Price</th>
                <th>Buyer</th>
                <th>Shipping Address</th>
                <th>Order Date</th>
            </tr>
        </thead>
        <tbody>
            {{#each orders}}
            <tr>
                <td>{{product_name}}</td>
                <td>{{quantity}}</td>
                <td>${{price}}</td>
                <td>{{buyer_name}}</td>
                <td>{{address}}</td>
                <td>{{timeago order_date}}</td>
            </tr>
            {{/each}}
        </tbody>
    </table>
    <h3>Total Earnings: ${{totalEarnings}}</h3>
</div>
